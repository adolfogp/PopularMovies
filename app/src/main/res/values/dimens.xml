<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Size to use for movie poster thumbnails -->
    <dimen name="movie_poster_thumbnail_width">180dp</dimen>
    <dimen name="movie_poster_thumbnail_height">270dp</dimen>

    <!-- Size to use for movie backdrops -->
    <dimen name="movie_backdrop_width">360dp</dimen>
    <dimen name="movie_backdrop_height">203dp</dimen>

    <!-- Font sizes used for the movie details -->
    <dimen name="title">20sp</dimen>
    <dimen name="subhead">16sp</dimen>
    <dimen name="body">14sp</dimen>

    <!-- Padding to use on the different sections of the movie details -->
    <dimen name="trailer_label_top_padding">@dimen/activity_vertical_margin</dimen>
    <dimen name="trailer_label_bottom_padding">8dp</dimen>
    <dimen name="review_label_top_padding">@dimen/activity_vertical_margin</dimen>
    <dimen name="review_label_bottom_padding">8dp</dimen>

    <!-- Sizes to use on movie review items -->
    <dimen name="review_author_top_padding">8dp</dimen>
    <dimen name="review_author_bottom_padding">4dp</dimen>

    <!-- Sizes to use on movie trailer items -->
    <dimen name="trailer_icon_width">24dp</dimen>
    <dimen name="trailer_icon_height">24dp</dimen>
    <dimen name="share_icon_width">24dp</dimen>
    <dimen name="share_icon_height">24dp</dimen>
    <dimen name="trailer_name_left_padding">8dp</dimen>
    <dimen name="trailer_share_left_margin">@dimen/activity_horizontal_margin</dimen>
</resources>
